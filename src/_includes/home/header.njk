<header class="wrapper">
    <div class="header-logo">
        <a class="site-title shake" href="/">
            {{ settings.home.logoText }}
        </a>
    </div>
    <nav class="nav">
        <ul class="nav-menu">
            <li class="nav-menu-item">
                <a class="shake {{ 'active' if '/about' in page.url }}" href="/about">About</a>
            </li>
            <li class="nav-menu-item">
                <a class="shake {{ 'active' if '/projects' in page.url }}" href="/projects">Projects</a>
            </li>
            <li class="nav-menu-item">
                <a class="shake {{ 'active' if '/blog' in page.url }}" href="/blog">Blog</a>
            </li>
            <li class="nav-menu-item toggle-item">
                <input type="checkbox" class="theme-controller"  id="switch" value="dark" />
                <label for="switch">Toggle</label>
            </li>
        </ul>
    </nav>
</header>
