<div class="post-container {{ 'featured' if item.data.featured == true }}">
    <div class="post-container-header">
        <div class="post-tag-logo" style="background-image: url('/assets/img/{{ item.data.category }}.png')">
        </div>
        <h2>
            <a href="{{ item.url }}">{{ item.data.title | safe }}</a>
        </h2>
    </div>
    <div class="post-container-body">
        <span class="post-container-body-date">
            {{ item.data.date | localeDate }}
        </span>
    </div>
</div>
