---
layout: layout
---


<main class="main-container">
    {% if banner %}
    <a href="{{banner}}" target="_blank" rel="noopener noreferrer">
        <img class="post-banner" src="{{banner}}" alt="banner" />
    </a>
    {% endif %}
    <h2 class="page-title" style="width: 100%; text-align: center;">
        {{title}}
    </h2>


    {% include 'tags.njk' %}

    <div class="project-overview">
        {% if liveLink %}
        <a class="live-link" href="{{liveLink}}" target="_blank" rel="noopener noreferrer">
            <img width="64" src="/assets/img/web.png" alt="web" />
            <h4>Live Link</h4>
        </a>
        {% endif %}
        {% if githubLink %}
        <a class="github-link" href="{{githubLink}}" target="_blank" rel="noopener noreferrer">
            <img width="64" src="/assets/img/github.png" alt="github" />
            <h4>Github Link</h4>
        </a>
        {% endif %}
    </div>


    {{ content | safe}}
    <br />

    {%- if collections.projects %}
    {%- set nextPost = collections.projects | getNextCollectionItem %}
    {%- set previousPost = collections.projects | getPreviousCollectionItem %}
    {%- if previousPost or nextPost %}
    <div class="pagination-container prev-next-post">
        {%- if previousPost %}
        <div class="pagination-link">
            <h3>Previous Post</h3>
            <a href="{{ previousPost.url | url }}">
                {{ previousPost.data.title }}
            </a>
        </div>
        {% endif %}
        {%- if nextPost %}
        <div class="pagination-link" style="text-align: end;">
            <h3>Next Post</h3>
            <a href="{{ nextPost.url | url }}">
                {{ nextPost.data.title }}
            </a>
        </div>
        {% endif %}
    </div>
    {%- endif %}
    {%- endif %}

    <div style="margin-top: 30px;">
        {% include 'author.njk' %}
    </div>
</main>
